#!/usr/bin/env bash
#setup and config nginx on a server
file='/etc/nginx/sites-available/default'
apt-get update
apt-get install -y nginx
echo 'Hello World!' > /var/www/html/index.nginx-debian.html
sed -i "s/server_name _;/server_name _;\\n\\trewrite ^\/redirect_me \/index1.html permanent;/g" $file
e4='error_page 404 \/custom404.html;\n'
location='location = \/custom404.html {\n  root \/usr\/share\/nginx\/html;\n  internal;\n}'
echo "Ceci n'est pas une page" > /usr/share/nginx/html/custom404.html
sed -i "s/server_name _;/$e4$location\\nserver_name _;/g" $file
sed -i "s/server_name _;/add_header X-Served-By '$HOSTNAME';\\nserver_name _;/g" $file
#install and configure new load balancer
apt-get install --no-install-recommends -y software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-2.6
apt-get install -y haproxy=2.6.\*
fe="frontend haproxy-main\n\tbind *:80\n\toption forwardfor\n\tdefault_backend myservers"
be="backend myservers\n\tbalance roundrobin\n\tserver web01 35.174.207.85:80 check\n\tserver web02 52.204.97.13:80 check"
file='/etc/haproxy/haproxy.cfg'
echo -e "$fe" >> $file
echo -e "$be" >> $file
echo "ENABLED=1" > /etc/default/haproxy
service nginx restart
service haproxy start
